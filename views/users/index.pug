extends ../layout/common.pug
block content
	span.h1 Users 
	a.btn.btn-primary(href='/users/create') Create
	.d-flex.align-items-center
		form.ml-auto(action="/users/search", method="GET" class="d-flex")
			input(tpye="text", name="q", class="form-control")
			button(type="submit", class="btn btn-primary ml-3") Search
	table.table
		tr
			th Name
			th Phone
			th Action
		each user in users
			tr
				td=user.name
				td=user.phone
				td 
					a.btn.btn-primary(href='/users/' +user.id) detail
